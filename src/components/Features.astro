---
import Card from "./Card.astro";

const featuresData = [
    {title: 'Card 1', body: 'Text'}, 
    {title: 'Card 2', body: 'Text'}, 
    {title: 'Card 3', body: 'Text'}, 
    {title: 'Card 4', body: 'Text'}
]
---

<section class="features">
    <div class="container">
      {featuresData.map(feature => (
        <Card dark={true}>
          <h3>{feature.title}</h3>
          <p>{feature.body}</p>
        </Card>
      ))}
    </div>
  </section>

  <style>
    .features .container {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-gap: 20px;
  padding: 0 20px;
  margin: 30px auto;
}

@media (max-width: 500px) {
  .features .container {
    grid-template-columns: 1fr;
  }
}
  </style>